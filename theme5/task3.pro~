#!/usr/bin/swipl

ребенок(петя).
ребенок(таня).
ребенок(лена).

животное(собака).
животное(кошка).
животное(хомяк).

гуляет(петя, Х) :-
  животное(Х), ребенок(петя), Х \= хомяк, Х \= кошка.

гуляет(таня, Х) :-
  животное(Х), ребенок(таня), Х = кошка.

гуляет(лена, Х) :-
  ребенок(лена), животное(Х).

решение(Х1, Х2, Х3, Ж1, Ж2, Ж3) :-
  Х1 = петя, Х2 = таня, Х3 = лена,
  гуляет(Х1, Ж1), гуляет(Х2, Ж2), гуляет(Х3, Ж3),
  writeln([Х1, Ж1]), writeln([Х2, Ж2), writeln([Х3, Ж3]).

main :-
  решение(Х1, Х2, Х3, Ж1, Ж2, Ж3).
